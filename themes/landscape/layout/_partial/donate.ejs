<% if (theme.donate) { %>
  <!-- css -->
  <style type="text/css">
    #donate_module {
      margin: 20px;
    }

    .center {
      text-align: center;
    }

    .hidden {
      display: none;
    }

    .donate_bar a.btn_donate {
      display: inline-block;
      width: 82px;
      height: 82px;
      background: url("https://wx4.sinaimg.cn/large/83900b4egy1fktc7oetj4g202a06y0so.gif") no-repeat;
      _background: url("https://wx4.sinaimg.cn/large/83900b4egy1fktc7oetj4g202a06y0so.gif") no-repeat;
    }

    .donate_bar a.btn_donate:hover {
      background-position: 0px -82px;
    }

    .donate_bar .donate_txt {
      display: block;
      color: #9d9d9d;
      font: 14px/2 "Microsoft Yahei";
      margin: 10px 0 20px;
    }
#donate_guide{
  width: 80%;
  margin: 0 auto;
}
    .donate_bar .img-container {
      width: 50%;
      float: left;
    }
    .donate_bar .img-container img{
      width: 80%;
      max-width: 200px;
    }

    .bold {
      font-weight: bold;
    }
  </style>
  <!-- /css -->
  <!-- Donate Module -->
  <div id="donate_module">
    <!-- btn_donate & tips -->
    <div id="donate_board" class="donate_bar center">
      <a id="btn_donate" class="btn_donate" target="_self" href="javascript:;" title="Donate 打赏"></a>
      <span class="donate_txt">
        <%= theme.donate.text %>
      </span>
    </div>
    <!-- /btn_donate & tips -->

    <!-- donate guide -->

    <div id="donate_guide" class="donate_bar center hidden">
      <div class="img-container">
        <img src="<%= theme.donate.wechat %>" alt="微信打赏" title="微信打赏" />
      </div>
      <div class="img-container">
        <img src="<%= theme.donate.alipay %>" alt="支付宝打赏" title="支付宝打赏" />
      </div>
    </div>
    <!-- /donate guide -->

    <!-- donate script -->
    <script type="text/javascript">
      document.getElementById('btn_donate').onclick = function () {
        $('#donate_guide').toggleClass('hidden');
      }
    </script>
    <!-- /donate script -->
  </div>
  <!-- /Donate Module -->
  <% } %>